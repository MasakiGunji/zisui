<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <h2>新規登録画面</h2>
      
        <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field mt-20">
          
          <%= f.label :名前 %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control", placeholder:"名前" %>
        </div>
        
        <div class="field mt-10">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"メールアドレス" %>
        </div>
      
        <div class="field mt-10">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"パスワード" %>
        </div>
      
        <div class="field mt-10">
          <%= f.label :パスワード %>
          <em>(確認)</em>
          <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder:"パスワード" %>
        </div>
      
        <div class="actions">
          <%= f.submit "新規登録", class:"btn btn-lg btn-block mt-20" %>
        </div>
        
        <%= link_to "ログイン", new_user_session_path, class:"btn btn-success btn-lg btn-block mt-20" %>
      <% end %>
      
    </div>
  </div>
</div>




